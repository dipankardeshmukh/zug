	<logger name="org.hibernate">
    	<level value="info" />
	</logger>
	
	<root>
		<level value="ALL" />
	<!--	<appender-ref ref="Debug" /> -->
		<appender-ref ref="Result" />
		<appender-ref ref="Error" />
		<appender-ref ref="Primitives" />
<!--		<appender-ref ref="PrimitiveResults" /> -->
	</root>


</log4j:configuration>