<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="variableVBox" alignment="CENTER" minHeight="200.0" minWidth="200.0" prefHeight="240.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.automature.spark.gui.controllers.VariableController">
         <children>
            <ToolBar fx:id="toolBar" minWidth="220.0" prefHeight="40.0" prefWidth="220.0">
               <items>
                  <Button fx:id="addVariableButton" mnemonicParsing="false" onAction="#addVariable">
                     <graphic>
                        <ImageView fx:id="refreshCVListButton">
                           <image>
                              <Image url="@icons/black/glyph_square_solid_plus.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Add Context Variable" />
                     </tooltip>
                  </Button>
                  <Button fx:id="reloadVariablesButton" mnemonicParsing="false" onAction="#loadVariables">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@icons/black/glyph_reload.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Reload Variables" />
                     </tooltip>
                  </Button>
                  <Separator orientation="VERTICAL" prefHeight="20.0" />
            <MenuButton contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
               <items>
                  <RadioMenuItem fx:id="showCVMI" mnemonicParsing="false" onAction="#loadVariables" text="Context Variables">
                     <toggleGroup>
                        <ToggleGroup fx:id="variables" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="showLVMI" mnemonicParsing="false" onAction="#loadVariables" text="Local Variables" toggleGroup="$variables" />
                  <RadioMenuItem fx:id="allMI" mnemonicParsing="false" onAction="#loadVariables" selected="true" text="All Variables" toggleGroup="$variables" />
               </items>
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/black/glyph_settings.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuButton>
                  <Button fx:id="copyButton" disable="true" mnemonicParsing="false" visible="false">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@icons/black/glyph_copy.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Copy" />
                     </tooltip>
                  </Button>
               </items>
            </ToolBar>
            <TableView fx:id="tableView" editable="true" prefHeight="270.0" prefWidth="270.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn editable="false" prefWidth="100.0" text="ID" />
                <TableColumn prefWidth="119.0" text="Value" />
              </columns>
            </TableView>
         </children>
      </VBox>
