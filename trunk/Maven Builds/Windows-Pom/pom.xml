    <groupId>com.automature</groupId>
    <artifactId>ZUG</artifactId>
    <packaging>jar</packaging>
    <version>5.2-SNAPSHOT</version>
    <name>ZUG from scatch</name>
    <organization>
        <name>Automature LLC</name>
        <url>http://automature.com</url>
    </organization>
    <url>http://automature.com</url>
    <scm>
        <connection>scm:svn:http://svn.automature.com:90/svn/zug/branches/V5.2-dev</connection>
        <developerConnection>scm:svn:http://svn.automature.com:90/svn/zug/branches/V5.2-dev</developerConnection>
        <url></url>
    </scm>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <sourceDirectory>export</sourceDirectory>
        <outputDirectory>target/classes</outputDirectory>
        <finalName>${project.artifactId}</finalName>
     <!--   <resources>
          <resource>
              <directory>${project.build.sourceDirectory}/Automation/DatabaseLayer</directory>
              <includes><include>*.xml</include></includes>
              <targetPath>${project.build.outputDirectory}/DatabaseLayer</targetPath>
              </resource>
              <resource>
              <directory>${project.build.sourceDirectory}/Automation</directory>
              <includes><include>*.xml</include></includes>
               <targetPath>${project.build.outputDirectory}</targetPath>
              </resource>
        </resources>
        -->
        <plugins>
          <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <username>sankha</username> 
                    <password>sankhaSVN</password>
                    <excludes>bin/*.*</excludes>
                    <exportDirectory>${project.build.sourceDirectory}</exportDirectory>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>export</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
         
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestFile>${project.build.sourceDirectory}/MANIFEST.MF</manifestFile>
                       <manifest>
                            <main-class>com.automature.zug.engine.Controller</main-class>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                        </manifest>
                      
                    </archive>
                    
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.5</version>
                <configuration>
                    <target>

                      
                   
                     <copy todir="./KitInstall/ZUG" >
                           <fileset dir="export/Deployment Files" /></copy>
                           <copy file="target/ZUG.jar" todir="./KitInstall/ZUG" />
                           <zip destfile="Zug.zip" basedir="./KitInstall" />
                           <delete dir="./KitInstall" />
                           <copy todir="./NSIS">
                           <fileset dir="export/NSIS" />
                           
                           </copy>
                           <copy file="Zug.zip" todir="./NSIS" />
                           <exec executable="cmd">
                           <arg value="/c" />    
                           <arg value="makensis.exe" />
                           <arg value="./NSIS/setup.nsi" />
                            </exec>
                           <move file="./NSIS/ZugSetup-5.2.exe" todir="./" />
                        
                    </target>
                </configuration>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
