<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
	<appender name="Debug" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/Debug.txt"/>
		<param name="Append" value="true"/>
		<param name="maxBackupIndex" value="10"/>
		<param name="maxFileSize" value="100000KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern" value="%d{hh:mm:ss} [%t] %-5p %C - %m%n" />
		</layout>
	</appender>

	<appender name="Error" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/Error.txt" />
		<param name="maxBackupIndex" value="10" />
		<param name="Append" value="true"/>
		<param name="maxFileSize" value="100000KB" />
		<param name="threshold" value="WARN" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern" value="%d{hh:mm:ss} [%t] %-5p %C - %m%n" />
		</layout>

		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="WARN"/>
			<param name="LevelMax" value="WARN"/>
		</filter>
	</appender>


	<appender name="Result" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/Result.txt" />
		<param name="maxBackupIndex" value="10" />
		<param name="Append" value="true"/>
		<param name="maxFileSize" value="100000KB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern" value="%d{hh:mm:ss} [%t] %-5p %C - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO"/>
			<param name="LevelMax" value="WARN"/>
		</filter>
	</appender>


	<appender name="Atom" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/Atoms.txt"/>
		<param name="maxBackupIndex" value="10"/>
		<param name="Append" value="true"/>
		<param name="maxFileSize" value="100000KB" />
		<param name="threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern" value="%d{hh:mm:ss} [%t] %-5p %C - %m%n" />
		</layout>
	</appender>

	<appender name="AtomResults" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/AtomResults.txt"/>
		<param name="maxBackupIndex" value="10"/>
		<param name="Append" value="true"/>
		<param name="maxFileSize" value="100000KB" />
		<param name="threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="conversionPattern" value="%d{hh:mm:ss} [%t] %-5p %C - %m%n" />
		</layout>
	</appender>

	<logger name="org.hibernate">
    	<level value="info" />
	</logger>
	
	<root>
		<level value="ALL" />
		<appender-ref ref="Debug" />
		<appender-ref ref="Result" />
		<appender-ref ref="Error" />
		<appender-ref ref="Atom" />
		<appender-ref ref="AtomResults" />
	</root>


</log4j:configuration>